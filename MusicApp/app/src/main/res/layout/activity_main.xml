<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/wallpaper_purple"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/TextSongs"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="My Songs"
        android:textSize="40sp"
        android:layout_marginTop="5dp"
        android:layout_marginStart="15dp"
        android:layout_marginBottom="10dp"
        android:layout_centerHorizontal="true"
        android:fontFamily="@font/fs_pixel_sans_unicode_regular"
        android:textColor="@color/light_yellow"/>


    <ListView
        android:id="@+id/listViewMusics"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:dividerHeight="10sp"
        android:padding="8dp"
        android:divider="@android:color/transparent"
        android:layout_below="@+id/TextSongs" />

</RelativeLayout>
